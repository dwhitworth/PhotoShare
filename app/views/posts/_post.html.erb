<div class-="post">
  <div class="post-head">
    <div class="name">
      <%= link_to post.user.user_name, profile_path(post.user.user_name) %>
    </div>
  </div>
  <div class="image center-block">
    <%= link_to (image_tag post.image, class:'img-responsive'), post_path(post) %>
  </div>
  <p class="caption">
    <%= post.caption %>
  </p>
</div>